@model List<CategoryListResponseModel>

<div class="container my-4">

    <a asp-action="create" asp-controller="category" class="btn btn-outline-primary">Ekle</a>
    <table class="table table-striped table-bordered pt-4">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Definition</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count > 0)
            {

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Definition</td>
                        <td asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</td>
                    </tr>
                }



            }
            else
            {
                <tr>
                    <td>Data bulunamadı</td>
                </tr>
            }

        </tbody>
    </table>

</div>